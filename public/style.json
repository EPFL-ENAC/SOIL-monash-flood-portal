{
  "version": 8,
  "name": "Default Style",
  "sources": {
    "osm": {
      "type": "raster",
      "tiles": ["https://tile.openstreetmap.org/{z}/{x}/{y}.png"],
      "tileSize": 256,
      "minzoom": 0,
      "maxzoom": 19
    },
    "exposure": {
      "type": "raster",
      "tiles": ["https://enacit4r-cdn.epfl.ch/monash-flood-portal/2023-06-20/tiles/exposure/{z}/{x}/{y}.png"],
      "minZoom": 8,
      "maxZoom": 12
    }
  },
  "layers": [
    { "id": "osm", "type": "raster", "source": "osm" },
    {
      "id": "exposure",
      "type": "raster",
      "source": "exposure",
      "minzoom": 8,
      "maxzoom": 22,
      "paint": {
        "raster-opacity": 0.5
      }
    }
  ]
}
